ul(*ngIf="totalPages > 1")
  li.prev(*ngIf="currentPage>1 && totalPages>2" '(click)'="setPage(currentPage-1)")
    i.icon-left
  li(*ngFor="let n of [].constructor(totalPages).fill(0), let i = index" '[ngClass]'="{active: i+1 == currentPage}" '(click)'="setPage(i+1)") {{i+1}}
  li.next(*ngIf="currentPage<totalPages && totalPages>2" '(click)'="setPage(currentPage+1)")
    i.icon-right
